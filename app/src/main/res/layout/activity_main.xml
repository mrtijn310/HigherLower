<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#00710E"
    tools:context=".Main" >

    <ImageView
        android:layout_width="72px"
        android:layout_height="96px"
        android:id="@+id/imgCard1"
        android:layout_marginTop="57dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/empspace"
       />

    <ImageView
        android:layout_width="72px"
        android:layout_height="96px"
        android:id="@+id/imgCard2"
        android:layout_marginTop="57dp"
        android:layout_marginLeft="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/empspace"
        />

    <ImageView
        android:layout_width="72px"
        android:layout_height="96px"
        android:id="@+id/imgCard3"
        android:layout_marginTop="57dp"
        android:layout_marginLeft="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/empspace"
        />

    <ImageView
        android:layout_width="72px"
        android:layout_height="96px"
        android:id="@+id/imgCard4"
        android:layout_marginTop="57dp"
        android:layout_marginLeft="160dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/empspace"
        />

    <ImageView
        android:layout_width="72px"
        android:layout_height="96px"
        android:id="@+id/imgCard5"
        android:layout_marginTop="57dp"
        android:layout_marginLeft="210dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/empspace"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Higher"
        android:id="@+id/btHoger"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="92dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lower"
        android:id="@+id/btLower"
        android:layout_toEndOf="@+id/imgCard5"
        android:layout_alignTop="@+id/btHoger"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
